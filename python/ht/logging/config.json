{
    "version": 1,

    "formatters": {
		"default": {
			"format": "%(asctime)s %(levelname)-8s %(name)s | %(message)s",
			"datefmt": "%H:%M:%S"
		}
    },

	"handlers": {
		"console": {
			"class": "logging.StreamHandler",
			"level": "DEBUG",
			"formatter": "default",
			"stream": "ext://sys.stdout"
		},

		"houdini_python_shell": {
			"class": "ht.logging.shellio.PythonShellHandler",
			"level": "WARNING",
			"formatter": "default"
		}
    },

    "loggers": {
		"ht": {
			"level": "INFO",
			"handlers": ["console", "houdini_python_shell"],
			"propagate": false
		},
		"mantra": {
			"level": "DEBUG",
			"handlers": ["console"],
			"propagate": false
		}
    },

    "root": {
		"level": "INFO",
		"handlers": ["console"]
    }
}
